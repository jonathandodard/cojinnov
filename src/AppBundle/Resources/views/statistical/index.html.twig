{% extends '::base.html.twig' %}
{% block body %}
    <nav>
        <div class="nav-wrapper">
            <div class="col s12">
                <a href="{{ path('home') }}" class="breadcrumb">Home</a>
                <a href="{{ path('statistical_list') }}" class="breadcrumb">Liste statistiques</a>
            </div>
        </div>
    </nav>
    <a class="waves-effect waves-light btn-large float-l" href="{{ path('statistical_create') }}"><i class="material-icons left">show_chart</i>Creation graphique Stastique</a>

    <table class="responsive-table striped">
        <thead>
        <tr>
            <th class="center co-js-sort">Name</th>
            <th class="center co-js-sort">Periode</th>
            <th class="center co-js-sort">Entity</th>
            <th class="center co-js-sort">Condition</th>
        </tr>
        </thead>
        <tbody>
        <tr>
            {% for statistic in statistics %}
                <td class="center"><a href="{{ path('statistical_by_favorite', {'id': statistic.id }) }}">{{ statistic.name }}</a></td>
                <td class="center">{{ statistic.period }}</td>
                <td class="center">{{ statistic.entity }}</td>
                <td class="center">{{ statistic.argument }}</td>
            {% endfor %}
        </tr>
        </tbody>
    </table>
    <ul class="pagination center-align">
        <li class="disabled"><a href="#!"><i class="material-icons">chevron_left</i></a></li>
        <li class="active"><a href="#!">1</a></li>
        <li class="waves-effect"><a href="#!">2</a></li>
        <li class="waves-effect"><a href="#!">3</a></li>
        <li class="waves-effect"><a href="#!">4</a></li>
        <li class="waves-effect"><a href="#!">5</a></li>
        <li class="waves-effect"><a href="#!"><i class="material-icons">chevron_right</i></a></li>
    </ul>
{% endblock %}