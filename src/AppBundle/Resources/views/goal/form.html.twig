{% extends '::base.html.twig' %}
{% block title %}CJ Formulaire Client{% endblock %}
{% block body %}
    <nav>
        <div class="nav-wrapper">
            <div class="col s12">
                <a href="{{ path('home') }}" class="breadcrumb">{{ 'home'|trans|capitalize }}</a>
                <a href="{{ path('goal_update') }}" class="breadcrumb">{{ 'statistics'|trans|capitalize }}</a>
            </div>
        </div>
    </nav>
    {{ form_start(form) }}

    {{ form_errors(form) }}

    <div class="row mgr-T-15 ">
        <div class="col s6 center-align form-orderCustomer-img">
            <img width="44%" src="{{ asset('img/office.png') }}">
        </div>
        <div class="col s6 form-orderCustomer-input">
            <label class="f-s-20 color-text-master">{{ 'goal_on_product_sales_by_Semester'|trans|capitalize }}</label>
            {{ form_row(form.goalOneRef, {
                'label': 'product_reference'|trans|capitalize,
                'attr': {'style': 'margin-bottom:15px'}
                })
            }}
            {{ form_row(form.goalOne, {
                'label': 'number_to_realize'|trans|capitalize,
                'attr': {'style': 'margin-bottom:15px'}
                })
            }}


            <div class="divider mgr-T-15 mgr-B-10"></div>
            <label class="f-s-20 color-text-master">{{ 'goal_menstrual_figure'|trans|capitalize }}</label>
            {{ form_row(form.goalThree, {
                'label': 'number_to_realize'|trans|capitalize,
                'attr': {'style': 'margin-bottom:15px'}
            })
            }}

            <div class="divider mgr-T-15 mgr-B-10"></div>
            <label class="f-s-20 color-text-master">{{ 'objective_on_the_annual_figure'|trans }}</label>
            {{ form_row(form.goalTwo, {
                'label': 'number_to_realize'|trans|capitalize,
                'attr': {'style': 'margin-bottom:15px'}
                })
            }}

        </div>
        <div>
            <div>
                <div class="center-align form-save-customer">
                    <button id="appbundle_customer_save" class=" col s12 btn waves-effect waves-light" type="submit" name="appbundle_customer[save]">Submit
                        <i class="material-icons right">{{ 'submit'|trans|capitalize }}</i>
                    </button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}
