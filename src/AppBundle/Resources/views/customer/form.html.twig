{% extends '::base.html.twig' %}
{% block title %}CJ {{ 'customer_form'|trans|capitalize }}{% endblock %}
{% block body %}
<nav>
    <div class="nav-wrapper">
        <div class="col s12">
            <a href="{{ path('home') }}" class="breadcrumb">{{ 'home'|trans|capitalize }}</a>
            <a href="{{ path('customer_index') }}" class="breadcrumb">{{ 'customer_list'|trans|capitalize }}</a>
            <a href="{{ path('customer_create') }}" class="breadcrumb">{{ 'customer_creation'|trans|capitalize }}</a>
        </div>
    </div>
</nav>
    {{ form_start(form) }}

    {{ form_errors(form) }}

    <div class="row mgr-T-15 ">
        <div class="col s6 center-align form-orderCustomer-img">
            <img width="44%" src="{{ asset('img/office.png') }}">
        </div>
        <div class="col s6 form-orderCustomer-input">
            {{ form_row(form.numberAccount, {
                'label': 'account_number'|trans|capitalize,
                'attr': {'style': 'margin-bottom:15px'}
                })
            }}
            {{ form_row(form.entitled, {
                'label': 'entitled'|trans|capitalize,
                'attr': {'style': 'margin-bottom:15px'}
                })
            }}
            {{ form_row(form.ranking, {
                'label': 'ranking'|trans|capitalize,
                'attr': {'style': 'margin-bottom:15px'}
                })
            }}
            {{ form_row(form.nameRepresentative, {
                'label': 'name_of_the_representative'|trans|capitalize,
                'attr': {'style': 'margin-bottom:15px'}
                })
            }}
            {{ form_row(form.price, {
                'label': 'tariff_category'|trans|capitalize,
                'attr': {'style': 'margin-bottom:15px'}
                })
            }}
        </div>
        <div class="col s12">
            <div class="col s6">
                {{ form_row(form.name, {
                    'label': 'name'|trans|capitalize,
                    'attr': {'style': 'margin-bottom:15px'}
                    })
                }}
                {{ form_row(form.address, {
                    'label': 'adresse'|trans|capitalize,
                    'attr': {'style': 'margin-bottom:15px'}
                    })
                }}
                {{ form_row(form.city, {
                    'label': 'city'|trans|capitalize,
                    'attr': {'style': 'margin-bottom:15px'}
                    })
                }}
                {{ form_row(form.phoneNumber, {
                    'label': 'phoneNumber'|trans|capitalize,
                    'attr': {'style': 'margin-bottom:15px'}
                    })
                }}
            </div>
            <div class="col s6">
                {{ form_row(form.email, {
                    'label': 'email'|trans|capitalize,
                    'attr': {'style': 'margin-bottom:15px'}
                    })
                }}
                {{ form_row(form.additionalAddress, {
                    'label': 'additional_address'|trans|capitalize,
                    'attr': {'style': 'margin-bottom:15px'}
                    })
                }}
                {{ form_row(form.zipCode , {
                    'label': 'zip_code'|trans|capitalize,
                    'attr': {'style': 'margin-bottom:15px'}
                    })
                }}
                {{ form_row(form.save, {
                    'attr': {'style': 'display:none'}
                    })
                }}
                <div class="center-align form-save-customer">
                    <button id="appbundle_customer_save" class=" col s12 btn waves-effect waves-light" type="submit" name="appbundle_customer[save]">{{ 'submit'|trans|capitalize }}
                        <i class="material-icons right">send</i>
                    </button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}
