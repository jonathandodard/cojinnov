{% extends '::base.html.twig' %}
{% block title %}CJ {{ 'order'|trans|capitalize }}{% endblock %}
{% block body %}
    <nav>
        <div class="nav-wrapper">
            <div class="col s12">
                <a href="{{ path('home') }}" class="breadcrumb">{{ 'home'|trans|capitalize }}</a>
                <a href="{{ path('customer_index') }}" class="breadcrumb">{{ 'customer_list'|trans|capitalize }}</a>
                <a href="{{ path('customer_index_by_costumer', {'id' : customer.id } ) }}" class="breadcrumb">{{ 'customer'|trans|capitalize }} : {{ customer.numberAccount }}</a>
                <a href="{{ path('product_create') }}" class="breadcrumb">{{ 'order_creation'|trans|capitalize }}</a>
            </div>
        </div>
    </nav>
    <div class="row form-orderCustomer-row pad-B-30">
        <div class="col s6">
            <img src="">
        </div>
        <div class="col s6 form-orderCustomer-col">
            <div><p>{{ 'purchase_order'|trans|capitalize }}</p></div>
            <label>{{ 'society'|trans|capitalize }} :</label>
                <p>{{ customer.ranking }}</p>
            <label>{{ 'billing'|trans|capitalize }} :</label>
                <p>{{ customer.id }}</p>
            <label>{{ 'delivery'|trans|capitalize }} :</label>
                <p>{{ customer.id }}</p>
            <label>{{ 'phoneNumber'|trans|capitalize }}</label>
                <p>{{ customer.phoneNumber }}</p>
            <label>{{ 'fax'|trans|capitalize }}</label>
                <p>{{ customer.id }}</p>
        </div>
    </div>
    <div class="row form-orderCustomer-row">
        <div class="col s6 form-orderCustomer-col">
            <label>{{ 'representative'|trans|capitalize }} :</label>
                <p>{{ customer.id }}</p>
            <label>{{ 'payment_choice'|trans|capitalize }}t :</label>
                <p>{{ customer.id }}</p>
            <label>{{ 'delivery_date'|trans|capitalize }} :</label>
                <p>{{ customer.id }}</p>
            <label>{{ 'comment'|trans|capitalize }} :</label>
                <p>{{ customer.id }}</p>
        </div>
        <div class="col s6 form-orderCustomer-col">
            <label>{{ 'siret'|trans|capitalize }} :</label>
                <p>{{ customer.id }}</p>
            <label>NÂ° Intracom :</label>
                <p>{{ customer.id }}</p>
        </div>
    </div>
    <div class="row divider mgr-T-15"></div>
    <div class="row">
        <div class="col s12">
            <div class="col s4"></div>
            <input type="text" class="search-order col s4 center" placeholder={{ 'reference'|trans|capitalize }} data-url="{{ path('product_search') }}" data-url-insert ={{ path('order_insert_product') }}>
            <i class="material-icons search-icon">search</i>
            <div class="col s4"></div>
        </div>
    </div>
    <table class="responsive-table striped mgr-B-100">
        <thead>
            <tr>
                <th class="center">{{ 'reference'|trans|capitalize }}</th>
                <th class="center">{{ 'trade_name'|trans|capitalize }}</th>
                <th class="center">{{ 'unit_price'|trans|capitalize }}</th>
                <th class="center">{{ 'amount'|trans|capitalize }}</th>
                <th class="center">{{ 'price_wt'|trans|capitalize }}</th>
                <th class="center">{{ 'price_iot'|trans|capitalize }}</th>
                <th class="center"></th>
            </tr>
        </thead>
        <tbody class="co-js-search">
            <tr>
                {#<td class="center"><input type="text" class="search-order" data-url="{{ path('product_search') }}" data-url-insert ={{ path('order_insert_product') }}></td>#}
                {#<td class="center"><input type="text" ></td>#}
                {#<td class="center"><input type="text" ></td>#}
                {#<td class="center"><input type="text" ></td>#}
                {#<td class="center"><input type="text" ></td>#}
                {#<td class="center"><input type="text" ></td>#}
                {#<td class="center"></td>#}
            </tr>
        </tbody>
    </table>
    <input class="customer-id" type="hidden" value="{{ customer.id }}">

    <!-- Modal Structure -->
    <div id="modalPrice" class="modal">
        <div class="modal-content">
        <h4>{{ 'definition_of_the_price'|trans|capitalize }}</h4>
            <input type="number" class="co-js-price-modal">
        </div>
    </div>
    <div id="modalQuantity" class="modal">
        <div class="modal-content">
            <h4>{{ 'set_quantity'|trans|capitalize }}</h4>
            <input type="number" class="co-js-quantity-modal">
        </div>
    </div>
    <div id="modalTva" class="modal">
        <div class="modal-content">
            <h4>{{ 'vat'|trans|capitalize }}</h4>
            <input type="number" class="co-js-tva-modal" value="20">
        </div>
    </div>
    <div id="modalDoublon" class="modal">
        <div class="modal-content center">
            <h4>{{ 'you_have_already_registered_this_product'|trans|capitalize }}</h4>
        </div>
    </div>
    <div id="modalReferenceNotExist" class="modal">
        <div class="modal-content center">
            <h4>{{ 'the_reference_does_not_exist'|trans|capitalize }}</h4>
        </div>
    </div>
    <div id="updatePrice" class="modal">
        <div class="modal-content">
            <h4>{{ 'redefine_price'|trans|capitalize }}</h4>
            <input type="number" class="co-js-update-price-modal">
        </div>
    </div>
    <div id="updateQuantity" class="modal">
        <div class="modal-content">
        <h4>{{ 'redefine_qauntity'|trans|capitalize }}</h4>
            <input type="number" class="co-js-update-quantity-modal">
        </div>
    </div>
    {{ form_start(form) }}
    <div class="row form-orderCustomer-footer">
        <div class="col s3">
            {{ form_row(form.tva, {
                'label': 'vat'|trans|capitalize ,
                'attr': {'style': 'margin-bottom:5px;'}
                })
            }}
        </div>
        <div class="col s3">
            {{ form_row(form.totalHT, {
                'label': 'total_without_taxes'|trans|capitalize,
                'attr': {'style': 'margin-bottom:5px'}
                })
            }}
        </div>
        <div class="col s3">
            {{ form_row(form.totalTTC, {
                'label': 'Total_all_taxes_included'|trans|capitalize,
                'attr': {'style': 'margin-bottom:5px'}
                })
            }}
        </div>
        <div class="col s3" style="padding-top: 33px; !important;">
            {{ form_row(form.save, {
                'attr': {'style': 'display:none'}
            })
            }}
            <button id="appbundle_customer_save" class=" col s12 btn waves-effect waves-light" type="submit" name="appbundle_customer[save]">{{ 'submit'|trans|capitalize }}
                <i class="material-icons right">send</i>
            </button>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}
{% block javascripts %}
    <script type="text/javascript" src="{{ asset('js/jquery-3.2.1.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/materialize.min.js') }}"></script>
    <script src="{{ asset('js/formOrder.js') }}"></script>
    <script src="{{ asset('js/modal.js') }}"></script>
{% endblock %}