{% extends '::base.html.twig' %}
{% block title %}CJ Parametre compte{% endblock %}
{% block body %}
    {{ form_start(form) }}

        <div class="row">
            <div class="col s3"></div>
            <div class="input-field col s6">
                {{ form_row(form.current_password) }}
            </div>
        </div>
        <div class="row">
            <div class="col s3"></div>
            <div class="input-field col s6">
                {{ form_row(form.plainPassword.children.first) }}
            </div>
        </div>
        <div class="row">
            <div class="col s3"></div>
            <div class="input-field col s6">
                {{ form_row(form.plainPassword.children.second) }}
            </div>
        </div>
        <div class="row">
            <div class="col s3"></div>
            <div class="input-field col s6 center">
                <input type="submit" value="{{ 'change_password.submit'|trans }}" />
            </div>
        </div>

    {{ form_end(form) }}
{% endblock %}
