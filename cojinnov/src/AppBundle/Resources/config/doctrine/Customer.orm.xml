<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity repository-class="AppBundle\Repository\CustomerRepository" name="AppBundle\Entity\Customer">
    <id name="id" type="integer" column="id">
      <generator strategy="AUTO"/>
    </id>

    <field name="numberAccount"            type="string"     column="number_account"        length="255"    nullable="false"   unique="true"/>
    <field name="entitled"                 type="string"     column="entitled"              length="255"    nullable="true"/>
    <field name="ranking"                  type="string"     column="ranking"               length="255"    nullable="false"/>
    <field name="nameRepresentative"       type="string"     column="name_representative"   length="255"    nullable="true"/>
    <field name="name"                     type="string"     column="name"                  length="255"    nullable="true"/>
    <field name="email"                    type="string"     column="email"                 length="255"    nullable="true"/>
    <field name="address"                  type="string"     column="address"               length="255"    nullable="true"/>
    <field name="additionalAddress"        type="string"     column="additional_address"    length="255"    nullable="true"/>
    <field name="zipCode"                  type="integer"    column="zipCode"               length="255"    nullable="false"/>
    <field name="city"                     type="string"     column="city"                  length="255"    nullable="true"/>
    <field name="phoneNumber"              type="integer"    column="phoneNumber"           length="255"    nullable="true"/>

  </entity>
</doctrine-mapping>
